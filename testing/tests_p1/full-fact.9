# factorial program
#:compile
proc fact(n: int) : int
  if (n <= 1) -> 
     fact := n;
  [] else ->
     fact := n * fact(n-1);
  fi
end

var f: int;

writes "What number to you want to compute the factorial of? ";
f := read;
if (f < 1) + (f > 100) -> write "Invalid: 0 < n < 101"; fi


writes "Factorial of ";
writes f;
writes " is ";
write fact(f);
